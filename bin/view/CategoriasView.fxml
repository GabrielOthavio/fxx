<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CategoriasController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Gerenciamento de Categorias">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <VBox spacing="5.0">
        <Label text="Nome" />
        <TextField fx:id="txtNome" prefWidth="300.0" maxWidth="300.0" />
        
        <Label text="Descrição" />
        <TextArea fx:id="txtDescricao" prefRowCount="3" prefWidth="300.0" maxWidth="300.0" />
    </VBox>

    <HBox spacing="10.0">
        <Button text="+ Salvar" onAction="#handleSalvar" style="-fx-background-color: lightgreen;" />
        <Button text="Atualizar" onAction="#handleAtualizar" style="-fx-background-color: orange;" />
        <Button text="Excluir" onAction="#handleExcluir" style="-fx-background-color: red; -fx-text-fill: white;" />
        <Button text="Limpar" onAction="#handleLimpar" style="-fx-background-color: lightgrey;" />
    </HBox>

    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50.0" />
            <TableColumn fx:id="colNome" text="Nome" prefWidth="200.0" />
            <TableColumn fx:id="colDescricao" text="Descrição" prefWidth="300.0" />
        </columns>
    </TableView>
</VBox>